<%- include('header') %>

    <form method="post">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title">Add user on system</div>
                <div class="mt-3">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" value="<%= user.name %>" />
                </div>
                <div class="mt-3">
                    <label>Username</label>
                    <input type="text" name="usr" class="form-control" value="<%= user.usr %>" />
                </div>
                <div class=" mt-3">
                    <label>Password</label>
                    <input type="password" name="pwd" class="form-control" value="<%= user.pwd %>" />
                </div>
                <div class=" mt-3">
                    <label>Level</label>
                    <div>
                        <input type="radio" name="level" value="user" <% if (user.level=='user' ) { %>checked <%} %>
                            /> User
                            <input type="radio" name="level" value="admin" <% if (user.level=='admin' ) { %>checked <%}
                                %>/> Admin
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-info ">Save</button>
                </div>
            </div>
        </div>
    </form>

    <%- include('footer') %>