<%- include('header') %>

    <%- include('navbar') %>

        <main class="card m-4 mt-10 bg-white shadow" style="height: 100%;">
            <div class="card-body">
                <a class="btn btn-danger" href="/deleteHistory">CLEAR HISTORY</a>
                <h2 class="special-elite-regular mt-2 text-success text-center">- HISTORY -</h2>
                <table class="table">
                    <thead class="text-success">
                        <tr>
                            <th scope="col" style="width: 150px;">Book</th>
                            <th width="200px" scope="col">Book name</th>
                            <th width="300px" scope="col">Status</th>
                            <th width="400px" scope="col">Borrow</th>
                            <th width="400px" scope="col">Return</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(books !==undefined){ %>
                            <% books.forEach((book)=> { %>
                                <tr>
                                    <td scope="row"><img class="rounded shadow-sm border border-2 border-white"
                                            src="./images/<%= book.img %>" width="200px"></td>
                                    <td>
                                        <h4>
                                            <%= book.name %>
                                        </h4>
                                        <p>
                                            <%= book.detail %>
                                        </p>
                                    </td>
                                    <td>
                                        <%= book.status %>
                                    </td>
                                    <td>
                                        <%= book.borrow_date %>
                                    </td>
                                    <td>
                                        <%= book.return_history_date %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
        </main>

        <%- include('footer') %>