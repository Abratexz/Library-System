<%- include('header') %>
    <%- include('navbar') %>

        <% if (session.message !=undefined) {%>
            <div class="alert alert-danger mt-3  "=>
                <%= session.message %>
                    <% session.message=undefined %>
            </div>
            <% } %>
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title"></div>
                        <div class="mt-3">
                            <a class="btn btn-primary" href="/addBook">
                                +Add product
                            </a>
                        </div>
                        <div class="mt-3">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th width="170px"></th>
                                        <th width="120px">IMG</th>
                                        <th>Book Tag</th>
                                        <th>ISBN</th>
                                        <th>Book Name</th>
                                        <th>Book Detail</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <% books.forEach((book)=> { %>
                                            <td><a class="btn btn-primary" href="/editBook/<%= book.id %>">Edit</a>
                                                <a class="btn btn-danger"
                                                    href="/deleteBook/<%= book.id %>/<%= book.img %>"
                                                    onclick="return confirm('Are you sure to delete ?')">Delete</a>
                                            </td>
                                            <td><img src="../images/<%= book.img %>" width="100px" /></td>
                                            <td>
                                                <%= book.group_book_name_tag %>
                                            </td>
                                            <td>
                                                <%= book.isbn %>
                                            </td>
                                            <td>
                                                <%= book.name %>
                                            </td>
                                            <td>
                                                <%= book.detail %>
                                            </td>

                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <%- include('footer') %>