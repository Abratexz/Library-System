<%- include('header') %>
    <%- include('navbar') %>

        <% if (session.message !=undefined) {%>
            <div class="alert alert-danger mt-3  "=>
                <%= session.message %>
                    <% session.message=undefined %>
            </div>
            <% } %>
                <div class="card mt-3 shadow ms-3 me-3">
                    <div class="card-body">
                        <div class="card-title fs-3 special-elite-regular">Book</div>
                        <div class="card-title"></div>
                        <form action="/book" method="GET">
                            <div class="input-group mb-3" style="padding-right: 1500px;">
                                <input type="text " name="search" class="form-control" placeholder="Search">
                                <button class="btn btn-secondary" type="submit">Search</button>
                            </div>
                        </form>
                        <div class="mt-3">
                            <a class="btn btn-primary" href="/addBook">
                                +Add
                            </a>
                            <a class="btn btn-success" href="/setAllBookAvailable"
                                onclick="return confirm('Do you want to SET ALL BOOK Available ?')">
                                SET ALL BOOK TO Available
                            </a>
                            <a class="btn btn-danger" href="/deleteAllBook"
                                onclick="return confirm('Are you sure to delete ?')">
                                Delete All Book
                            </a>
                        </div>
                        <div class="mt-3">
                            <table class="table table-bordered table-striped shadow">
                                <thead>
                                    <tr>
                                        <th width="170px"></th>
                                        <th width="120px">IMG</th>
                                        <th WIDTH="190px">Book Tag</th>
                                        <th WIDTH="150px">ISBN</th>
                                        <th WIDTH="150px">Author</th>
                                        <th>Book Name</th>
                                        <th>Book Detail</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <% books.forEach((book)=> { %>
                                            <td><a class="btn btn-primary" href="/editBook/<%= book.id %>">Edit</a>
                                                <a class="btn btn-danger"
                                                    href="/deleteBook/<%= book.id %>/<%= book.img %>"
                                                    onclick="return confirm('Are you sure to delete ?')">Delete</a>
                                            </td>
                                            <td><img src="../images/books/<%= book.img %>" width="100px" /></td>
                                            <td>
                                                <%= book.group_book_name_tag %>
                                            </td>
                                            <td>
                                                <%= book.isbn %>
                                            </td>
                                            <td>
                                                <%= book.author %>
                                            </td>
                                            <td>
                                                <%= book.book_name %>
                                            </td>
                                            <td>
                                                <%= book.detail %>
                                            </td>
                                            <td>
                                                <%= book.status %>
                                            </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <%- include('footer') %>