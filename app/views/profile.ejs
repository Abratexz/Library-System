<%- include('header') %>
    <%- include('navbar') %>


        <!-- Main -->
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 mx-auto">
                        <!-- Profile picture -->
                        <div class="card shadow border-0 mt-4 mb-10">
                            <div class="card-body text-center">
                                <div class="align-items-center ">
                                    <div>
                                        <div class="text-start fs-4 special-elite-regular">
                                            Profile
                                        </div>
                                        <div>

                                            <% if (user.img !=undefined) { %>
                                                <a class="avatar avatar-lg rounded-circle text-white">
                                                    <img src="../images/users/<%= user.img %>" width="200px"
                                                        height="200px">
                                                </a>
                                                <% } %>

                                        </div>
                                        <div>
                                            <div class="mt-4">
                                                <span class="h4 d-block mb-0">
                                                    <%= user.name %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <!-- Form -->
                        <form class="mt-5 mb-6">
                            <div class="card ">

                                <div class="card-body fs-5 ">
                                    <div class="text-end">
                                        <a class="btn btn-outline-primary btn-sm"
                                            href="/editProfile/<%= user.id %>">EDIT</a>
                                    </div>
                                    <div class="mt-3">
                                        <label class="form-label">Full Name</label>
                                        <div class="text-primary">
                                            <%= user.name %>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="form-label mt-3">Username</label>
                                        <div class="text-primary">
                                            <%= user.usr %>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="form-label mt-3">Phone</label>
                                        <div class="text-primary">
                                            <%= user.phone %>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="form-label mt-3">Citizen ID</label>
                                        <div class="text-primary">
                                            <%= user.citizencard %>
                                        </div>
                                    </div>

                                    <div class="text-end ">

                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        </div>
        </div>


        <%- include('footer') %>