<%- include('header') %>
    <%- include('navbar') %>

        <!-- Main -->
        <main class="py-6 bg-surface-secondary">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 mx-auto">
                        <!-- Profile picture -->
                        <div class="card shadow border-0 mt-4 mb-10">
                            <div class="card-body text-center">
                                <div class="align-items-center ">
                                    <div>
                                        <div class="text-start fs-4 special-elite-regular">
                                            Profile
                                        </div>
                                        <div>
                                            <% if (user.img !=undefined) { %>
                                                <a class="avatar avatar-lg rounded-circle text-white">
                                                    <img src="../images/users/<%= user.img %>" width="200px"
                                                        height="200px">
                                                </a>
                                                <% } %>

                                        </div>
                                        <div>
                                            <div class="mt-4">
                                                <span class="h4 d-block mb-0">
                                                    <%= user.name %>
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <form method="post" enctype="multipart/form-data">
                            <div class="card ">
                                <div class="card-body fs-5 ">
                                    <div class="">
                                        <label class="form-label">Name</label>
                                        <input type="text" class="form-control" name="name" value="<%= user.name %>">
                                    </div>
                                    <div class="">
                                        <label class="form-label mt-3">Username</label>
                                        <input type="text" class="form-control" name="usr" value="<%= user.usr %>">
                                    </div>
                                    <div class="">
                                        <label class="form-label mt-3">Password</label>
                                        <input type="password" class="form-control" name="pwd" value="<%= user.pwd %>">
                                    </div>
                                    <div class="">
                                        <label class="form-label mt-3">Phone</label>
                                        <input type="text" class="form-control" name="phone" value="<%= user.phone %>">
                                    </div>
                                    <div class="">
                                        <label class="form-label mt-3">Citizen ID</label>
                                        <input type="text" class="form-control" name="citizencard"
                                            value="<%= user.citizencard %>">
                                    </div>
                                    <div class="mt-3">
                                        <input type="file" name="img" class="form-control mt-4" />
                                    </div>
                                    <div class="text-end ">
                                        <a type="button" class="btn btn-md btn-neutral mt-3 me-2"
                                            href="/profile">Cancel</a>
                                        <button type="submit" class="btn btn-md btn-primary mt-3 ">Save</button>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
        </div>
        </div>

        <%- include('footer') %>