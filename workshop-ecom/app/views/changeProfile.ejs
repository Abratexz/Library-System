<%- include('header') %>
    <form method="post" action="/changeProfile">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title h4">Edit Info</div>
                <div class="mt-3">
                    <label>Name</label>
                    <input type="text" name="name" class="form-control" value="<%= user.name %>" />
                </div>
                <div class="mt-3">
                    <label>Username</label>
                    <input type="text" name="usr" class="form-control" value="<%= user.usr %>" />
                </div>
                <div class="mt-3">
                    <label>Password<span class="text-danger"> ***Will refer to same password if no
                            input***</span></label>
                    <input type="password" name="pwd" class="form-control" />
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-info">Save</button>
                </div>
                <% if (session.message !=undefined) {%>
                    <div class="alert alert-success mt-3">
                        <%= session.message %>
                            <% session.message=undefined %>
                    </div>
                    <% } %>
            </div>
        </div>
    </form>
    <%- include('footer') %>