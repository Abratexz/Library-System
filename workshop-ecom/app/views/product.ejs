<%- include('header') %>
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title"></div>
            <div class="mt-3">
                <a class="btn btn-info" href="/addProduct">
                    +Add product
                </a>
            </div>
            <div class="mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th width="170px"></th>
                            <th>IMG</th>
                            <th>Type of Product</th>
                            <th>Barcode</th>
                            <th>Product</th>
                            <th class="text-right">Cost</th>
                            <th class="text-right">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% products.forEach((product)=> { %>
                                <td><a class="btn btn-info" href="/editProduct/<%= product.id %>">Edit</a>
                                    <a class="btn btn-danger" href="/deleteProduct/<%= product.id%>/<%= product.img %>"
                                        onclick="return confirm('Are you sure to delete ?')">Delete</a>
                                </td>
                                <td><img src="images/<%= product.img %>" width="100px" /></td>
                                <td>
                                    <%= product.group_product_name %>
                                </td>
                                <td>
                                    <%= product.barcode %>
                                </td>
                                <td>
                                    <%= product.name %>
                                </td>
                                <td class="text-right">
                                    <%= product.cost %>
                                </td>
                                <td class="text-right">
                                    <%= product.price %>
                                </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%- include('footer') %>